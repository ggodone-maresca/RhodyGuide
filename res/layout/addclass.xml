<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="android.com.example.rhodyguide.EditScheduleFragment">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >
    
	    <EditText
	        android:id="@+id/subject"
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="4dp"
	        android:layout_marginRight="4dp"
	        android:hint="Subject"
	        android:inputType="text"
	        android:maxLength="4" />

	    <EditText
	        android:id="@+id/catalog"
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="4dp"
	        android:layout_marginRight="4dp"
	        android:layout_toEndOf="@+id/subject"
	        android:layout_toRightOf="@+id/subject"
	        android:hint="Course"
	        android:inputType="text"
	        android:maxLength="4" />

	    <EditText
	        android:id="@+id/section"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="4dp"
	        android:layout_marginRight="4dp"
	        android:layout_toEndOf="@+id/catalog"
	        android:layout_toRightOf="@+id/catalog"
	        android:hint="Section"
	        android:inputType="text"
	        android:maxLength="4" />
	    
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" >
	    
        <CheckBox
            android:id="@+id/m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="M" />

        <CheckBox android:id="@+id/t"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:text="T" />
        <CheckBox android:id="@+id/w"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:text="W" />
        <CheckBox android:id="@+id/th"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:text="Th" />
        <CheckBox android:id="@+id/f"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:text="F" />
        
	</LinearLayout>
	
    <LinearLayout 
    	android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" >
	    
      	<EditText
	        android:id="@+id/startSet"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:text="00:00" />
	    <EditText
	        android:id="@+id/endSet"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:text="00:00" />        
    </LinearLayout>
	    
	<Spinner
	    android:id="@+id/building_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="4dp" />

    <EditText
	    android:id="@+id/room_number"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:hint="Room #"
	    android:maxLength="4"
	    android:inputType="number" />
	        
</LinearLayout>